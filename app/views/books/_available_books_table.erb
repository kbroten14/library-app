<div id="featureWrap" class="floatLeft reports">
  	<h2>Available Books</h2>
  
  	<table class="report" cellpadding="0" cellspacing="0">
  		<tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Checkout</th>
  		</tr>
  		<% Book.available_books.each do |book| -%>
  			<tr class="<%= cycle("rowA", "rowB") -%>">
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.category %></td>
          <td>
            <%= form_tag(checkout_books_path) do %>
              <%= hidden_field_tag :customer_id, @customer.id %>
              <%= hidden_field_tag :book_id, book.id %>
              <%= image_submit_tag("btn_reviewed.png", alt: "CHECKOUT", title: "CHECKOUT") %>
            <% end %>
          </td>
        </tr>
      <% end -%>
    </table>
		
  </div>
  