<div id="feature" class="floatLeft">
  <div id="featureHeading">
    <h1 class="floatLeft">Recently Added Books</h1>
    <div class="clear"></div>
  </div>
    <%= flash[:notice]%>

  <div id="featureWrap" class="floatLeft reports">  
    <table class="report" cellpadding="0" cellspacing="0">
  		<tr>
  			<th>Title</th>
  			<th>Author</th>
  			<th>Category</th>
  			<th>Type</th>
  			<th>Date Added</th>
  		</tr>
  		<% @books.each do |book| -%>
  		<tr class="<%= cycle("rowA", "rowB") -%>">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.category %></td>
        <td><%= book.type %></td>
        <td><%= book.created_at.to_date %></td>
      </tr>
      <% end -%>
    </table>
  </div>
</div>